polkit.addRule(function(action, subject) {
    if (!subject.isInGroup('ready-set'))
        return;

    var actionMatches =
        action.id.indexOf("@SERVICE_NAME@.") === 0;

    if (actionMatches) {
        if (subject.local)
            return polkit.Result.YES;
        else
            return polkit.Result.AUTH_ADMIN;
    }

    return;
});
