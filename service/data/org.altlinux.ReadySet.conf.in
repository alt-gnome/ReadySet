<!DOCTYPE busconfig PUBLIC "-//freedesktop//DTD D-Bus Bus Configuration 1.0//EN"
  "http://www.freedesktop.org/standards/dbus/1.0/busconfig.dtd">
<busconfig>
  <policy user="@USER@">
    <allow own="@SERVICE_NAME@"/>
  </policy>

  <policy context="default">
    <allow send_destination="@SERVICE_NAME@" send_interface="@SERVICE_NAME@"/>
    <allow send_destination="@SERVICE_NAME@" send_interface="org.freedesktop.DBus.Introspectable"/>
  </policy>
</busconfig>
